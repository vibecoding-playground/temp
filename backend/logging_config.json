{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)d - %(funcName)s(): %(message)s"
    },
    "json": {
      "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(funcName)s %(lineno)d %(message)s"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "class": "logging.StreamHandler",
      "formatter": "standard",
      "stream": "ext://sys.stdout"
    },
    "file_info": {
      "level": "INFO",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "detailed",
      "filename": "logs/meetingmind.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_error": {
      "level": "ERROR",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "detailed",
      "filename": "logs/error.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "json_file": {
      "level": "INFO",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "json",
      "filename": "logs/meetingmind.json.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "meetingmind": {
      "level": "INFO",
      "handlers": ["console", "file_info", "file_error", "json_file"],
      "propagate": false
    },
    "gemini_service": {
      "level": "INFO",
      "handlers": ["console", "file_info", "json_file"],
      "propagate": false
    },
    "websocket_handler": {
      "level": "INFO",
      "handlers": ["console", "file_info", "json_file"],
      "propagate": false
    },
    "uvicorn.error": {
      "level": "INFO",
      "handlers": ["console", "file_error"],
      "propagate": false
    },
    "uvicorn.access": {
      "level": "INFO",
      "handlers": ["console", "file_info"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file_info", "file_error"]
  }
}